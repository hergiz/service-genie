@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
	{
	@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">
			<li>
				@Html.ActionLink(Ress.Hello + " " + User.Identity.GetUserName() + "!", "ChangePassword", "SystemUsers", new { area = "Admin" }, htmlAttributes: new { title = Ress.ChangePassword })
			</li>
			<li><a href="javascript:document.getElementById('logoutForm').submit()">@Ress.LogOff</a></li>
		</ul>
	}
}
else
{
		<ul class="nav navbar-nav navbar-right">
			<li>@Html.ActionLink(Ress.Login, "Login", "Account", new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
		</ul>
}

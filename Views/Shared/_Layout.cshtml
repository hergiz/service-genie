<!DOCTYPE html>
<html>
<head>
	<meta name="robots" content="nofollow" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle pull-left" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<div class="navbar-collapse collapse ig-nav-space">
				@{ Html.RenderPartial("_MainToolbar"); }
				@{ Html.RenderPartial("_LoginPartial"); }
			</div>
		</div>
	</div>
	<div class="container body-content content-bg">
		<div class="well well-sm">
			<div class="row">
				<div class="col-md-6 text-left">
					<h4 class="ig-inline">@ViewBag.Title</h4>
				</div>
				<div class="col-md-6 text-right">
					@RenderSection("Action", required: false)
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12 text-center">
				@if (!string.IsNullOrWhiteSpace(TempData["Mes"] as string))
				{ <div class="alert alert-success"><strong>@TempData["Mes"]</strong></div> }
				@if (!string.IsNullOrWhiteSpace(TempData["Err"] as string))
				{ <div class="alert alert-danger"><strong>@TempData["Err"]</strong></div> }
			</div>
		</div>
		<hr />
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; 2016 - Opacus d.o.o. Ver: 1.0.2</p>
		</footer>
	</div>
	<a class="back-to-top" href="#"><span class="glyphicon glyphicon-circle-arrow-up"></span></a>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>

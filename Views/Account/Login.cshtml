@model Ser.Models.LoginViewModel

@{
	Layout = "~/Views/Shared/_SignLayout.cshtml";
	ViewBag.Title = Ress.Login;
}
<div class="row">
	<div class="col-sm-offset-4 col-sm-4">
		<section id="loginForm">
			@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<h4>@Ress.Login</h4>
				<hr />
				@Html.ValidationSummary(true)
				<div class="form-group">
					@Html.LabelFor(m => m.UserName, new { @class = "col-sm-5 control-label" })
					<div class="col-sm-7">
						@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.UserName)
					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(m => m.Password, new { @class = "col-sm-5 control-label" })
					<div class="col-sm-7">
						@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.Password)
					</div>
				</div>
				
				<div class="form-group">
					<div class="col-sm-12 text-right">
						<input type="submit" value="@Ress.Login" class="btn btn-primary" />
					</div>
				</div>
			}
		</section>
	</div>
</div>
<div class="clearfix"></div>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
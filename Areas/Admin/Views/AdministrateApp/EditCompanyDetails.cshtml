@model Ser.Areas.Admin.Models.AdministrateApp.EditCompanyDetailsVM
@{
    ViewBag.Title = Ress.Ress.TitleEditCompanyDetails;
}

@section Action {
	@Html.ActionLink(Ress.Ress.Cancel, "Index", null, new { @class = "btn btn-sm btn-default" })
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@for(int i = 0; i < 6; i ++)
		{
			<div class="form-group">
				<div class="col-md-2">
					<strong>@Model.CompanyDetails[i].Name</strong>
					@Html.HiddenFor(model => model.CompanyDetails[i].Name)
					@Html.HiddenFor(model => model.CompanyDetails[i].Id)
				</div>
				<div class="col-md-10">
					@Html.TextBoxFor(model => model.CompanyDetails[i].Val, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.CompanyDetails[i].Val, "", new { @class = "text-danger" })
				</div>
			</div>
		}

		<div class="form-group">
			<div class="col-md-12 text-right">
				@Html.HiddenFor(model => model.Prefix)
				<input type="submit" value="@Ress.Ress.Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}